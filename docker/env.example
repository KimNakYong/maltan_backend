# 환경 변수 설정 파일 예시
# 실제 사용시 .env 파일로 복사하여 사용

# 데이터베이스 설정
POSTGRES_DB=maltan_db
POSTGRES_USER=maltan_user
POSTGRES_PASSWORD=maltan_pass123

# Redis 설정
REDIS_HOST=redis
REDIS_PORT=6379

# JWT 설정
JWT_SECRET=maltan-jwt-secret-key-2024-very-secure-key
JWT_EXPIRATION=86400000

# 외부 API 키 (실제 값으로 교체 필요)
KAKAO_MAP_API_KEY=your_kakao_map_api_key_here
NAVER_MAP_API_KEY=your_naver_map_api_key_here

# 서비스 URL 설정
USER_SERVICE_URL=http://user-service:8081
PLACE_SERVICE_URL=http://place-service:8082
RECOMMENDATION_SERVICE_URL=http://recommendation-service:8083
COMMUNITY_SERVICE_URL=http://community-service:8084
GATEWAY_SERVICE_URL=http://gateway-service:8080

# 프론트엔드 설정
REACT_APP_API_BASE_URL=http://localhost:8080
REACT_APP_KAKAO_MAP_API_KEY=your_kakao_map_api_key_here

# 모니터링 설정
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin123

# 로그 레벨
LOG_LEVEL=INFO
SPRING_PROFILES_ACTIVE=docker
